// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [

		
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			// The first argument in the `args` array is the path to the folder or workspace to open.
			// You can change it to open a different workspace.
			// I've set it to open your current workspace, but you can change it to any folder path.
			"args": [
				// Path to the workspace to open in the extension host
				"${workspaceFolder}/testdata",
				// Path to the extension to load
				"--extensionDevelopmentPath=${workspaceFolder}/src"
			],
			"sourceMaps": true,
			"outFiles": ["${workspaceFolder}/src/dist/**/*.js"],
			"preLaunchTask": "${defaultBuildTask}",
			"env": {
				"NODE_ENV": "development",
				"VSCODE_DEBUG_MODE": "true"
			},
			"resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
			"presentation": {
				"hidden": false,
				"group": "tasks",
				"order": 1
			}
		},
		{
			"name": "Debug Extension (with breakpoints)",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"${workspaceFolder}/testdata",
				"--extensionDevelopmentPath=${workspaceFolder}/src",
				"--inspect-extensions=9229"
			],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/src/dist/**/*.js",
				"${workspaceFolder}/src/test/**/*.js"
			],
			"preLaunchTask": "npm: watch",
			"env": {
				"NODE_ENV": "development",
				"VSCODE_DEBUG_MODE": "true"
			},
			"stopOnEntry": false,
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			]
		},
		{
			"name": "Attach to Extension Host",
			"type": "node",
			"request": "attach",
			"port": 9229,
			"restart": true,
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/src/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**"
			]
		},
		{
		"name": "Debug TS File",
		"type": "node",
		"request": "launch",
		"runtimeExecutable": "tsx",
		"program": "${file}",
		"sourceMaps": true,
		"cwd": "${workspaceFolder}"
		},
		{
			"type": "java",
			"name": "Debug (Launch) - SimpleJava",
			"request": "launch",
			"mainClass": "SimpleJava",
			"sourcePaths": ["${workspaceFolder}/testdata"]
		}
	]
}
